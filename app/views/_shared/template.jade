doctype
html
	head
		link(type='text/css', rel='stylesheet', href='/vendor/materialize/dist/css/materialize.min.css', media='screen,projection')
		link(type='text/css', rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
		link(type='text/css', rel='stylesheet', href='/public/css/default.css')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
	body
		#top
		header
			.row
				.col.m6
					a.button-collapse(href='#', data-activates='slide-out')
						i.average.material-icons.darkblue
							| menu
				.col.m6.right
					div.right.tray
						a
							i.average.material-icons.darkblue
								| search
						a
							i.average.material-icons.darkblue
								| dashboard
						a
							i.average.material-icons.white
								| info
			.row
				.col.m1
					-console.log(id);
					if id
						a.btn-floating.btn-large.waves-effect.waves-light.addbtn.cyan(href='/schedule/save')
							i.material-icons save
					else 
						a.btn-floating.btn-large.waves-effect.waves-light.addbtn.cyan.modal-trigger(data-target='modal1')
							i.material-icons add
				.col.m10
					if title
						h4 #{title}	
		main
			block content
		<!-- Nide Savigation -->
		ul#slide-out.side-nav
			li 
				a(href='/') Home
			li
				a(href='') Make a new schedule  
			li
				a(href='/about') About us
		#modal1.modal
			ul.tabs
				li.tab.col.s3
					a(href='#step-one') Type
				li.tab.col.s4.disabled
					a(href='#step-two') Info
			#step-one
				.row
					.input-field.col.s6.offset-s3
						select(onchange='pickSchedule(this)')
							option(value='', disabled='', selected='') Choose your option
							option(value='eating') Eating
							option(value='training') Training
						label Schedules
			#step-two
				.row
					form(action='/meal', method='POST')
						.input-field.col.s6.offset-s3
								select
									option(value='', disabled='', selected='') Choose your motivation
									option(value='MOTIVE_LOSE') Lose weight
									option(value='MOTIVE_BUILD') Build muscle
									option(value='MOTIVE_MAINTAIN') Maintain muscle
								label Schedules
						.input-field.col.s6.offset-s3
							input(id='weight', type='text')
							label(for='weight') Current weight
						.col.s3.offset-s6
							button.btn.waves-effect.waves-light(type='submit', name='action')
								| Proceed
				
		//footer.page-footer
			.row
				.col.m1.s12
					br
				.col.l6.s12
					h5.white-text Footer Content                 
					p.grey-text.text-lighten-4 You can use rows and columns here to organize your footer content.                 
			.footer-copyright
				.row
					.col.s1 
						br
					.col.s9
						| &copy; 2014 Copyright Text
					.col.s1.left
						a.grey-text.text-lighten-4.right(href='#!') More Links
		script(type='text/javascript', src='/vendor/jquery/dist/jquery.min.js')
		script(type='text/javascript', src='/vendor/materialize/dist/js/materialize.min.js')
		script(type='text/javascript', src='/public/scripts/global.js')
		